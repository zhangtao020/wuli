<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_fbfafa"
    >

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/title_bar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="50dp"
                    >
                    <ImageView
                        android:id="@+id/red_user_top_iv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_redbao_top"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:id="@+id/red_user_face_iv"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/red_user_name_tv"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/red_user_face_iv"
                                android:textSize="15dp"
                                android:textColor="#fff"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:id="@+id/red_user_id_tv"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:textSize="12dp"
                                android:textColor="#fff"
                                />
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_red_money"
                            android:layout_gravity="center_horizontal"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18dp"
                            android:textColor="#fff"
                            android:text="红包金额"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="15dp"
                                android:textColor="#fff"
                                android:text="￥"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/redbao_money_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textSize="23dp"
                                android:textColor="#fff"
                                android:gravity="center"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12dp"
                            android:textColor="#fff"
                            android:text="(含冻结金额)"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/linear_divider"
                />
            <TextView
                android:id="@+id/redbao_like_tv"
                android:layout_width="match_parent"
                android:layout_height="41.5dp"
                android:text="我的喜欢"
                android:textColor="@color/black_4a4a4a"
                android:textSize="15dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/icon_my_like"
                android:drawablePadding="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/redbao_order_tv"
                android:layout_width="match_parent"
                android:layout_height="41.5dp"
                android:text="我的订单"
                android:textColor="@color/black_4a4a4a"
                android:textSize="15dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/icon_my_order"
                android:drawablePadding="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/redbao_comment_tv"
                android:layout_width="match_parent"
                android:layout_height="41.5dp"
                android:text="我的评论"
                android:textColor="@color/black_4a4a4a"
                android:textSize="15dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/icon_my_comment"
                android:drawablePadding="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/linear_divider"
                />
            <TextView
                android:id="@+id/redbao_fuli_tv"
                android:layout_width="match_parent"
                android:layout_height="41.5dp"
                android:text="Wuliwuli发红包了"
                android:textColor="@color/black_4a4a4a"
                android:textSize="15dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/icon_my_fuli"
                android:drawablePadding="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/redbao_setting_tv"
                android:layout_width="match_parent"
                android:layout_height="41.5dp"
                android:text="设置"
                android:textColor="@color/black_4a4a4a"
                android:textSize="15dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/icon_set"
                android:drawablePadding="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_e7e7e7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/redbao_question_tv"
                android:layout_width="match_parent"
                android:layout_height="41.5dp"
                android:text="常见问题"
                android:textColor="@color/black_4a4a4a"
                android:textSize="15dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/icon_my_question"
                android:drawablePadding="10dp"
                android:layout_marginBottom="50dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>