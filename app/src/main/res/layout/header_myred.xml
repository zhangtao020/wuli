<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_fbfafa"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:background="@drawable/bg_tixian"
            android:gravity="center"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="￥"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/red_price_tv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:textSize="40dp" />
            </LinearLayout>

            <TextView
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/icon_right_shenqing"
                android:id="@+id/red_tixian_tv"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:text="申请提现"
                android:textColor="#fff"
                android:textSize="16dp"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bg_dongjie"
            android:gravity="center"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="￥"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/red_price1_tv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:textSize="40dp" />
            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:text="冻结红包"
                android:textColor="#fff"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_height="43dp"
        android:layout_width="match_parent">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:text="红包明细"
            android:textColor="@color/color_787878"
            android:textSize="17dp" />

        <TextView
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_right_forwar"
            android:id="@+id/red_tixianjilu_tv"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:text="提现记录"
            android:textColor="@color/color_9b9b9b"
            android:textSize="14dp"
            android:visibility="invisible"
            />
    </RelativeLayout>
</LinearLayout>