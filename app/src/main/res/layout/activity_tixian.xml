<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:fitsSystemWindows="true"
    >

    <include
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_money"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/tixian_money_tv"
            android:textSize="17dp"
            android:textColor="@color/color_646464"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/linear_divider"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/color_646464"
            android:text="提现信息"
            />
        <EditText
            android:id="@+id/tixian_input_et"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="37.5dp"
            android:layout_marginRight="37.5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="57dp"
            android:textSize="15dp"
            android:textColor="@color/color_646464"
            android:hint="请输入提现金额"
            android:drawableLeft="@drawable/icon_input_money"
            android:background="@drawable/bg_tixian_money"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"
            android:inputType="numberDecimal"
            />
        <Button
            android:id="@+id/tixian_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tixian_submit"
            android:text="确定提交"
            android:textSize="19dp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="14dp"
            />
    </LinearLayout>

</LinearLayout>